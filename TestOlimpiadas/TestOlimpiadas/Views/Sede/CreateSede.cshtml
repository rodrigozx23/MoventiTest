<!DOCTYPE html>
<html>
<head>
    <title>Sede CRUD</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 400px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-group button {
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-group button[type="submit"] {
            background-color: #008CBA;
        }
    </style>
</head>
<body>
    <h2>Crear Sede</h2>
    <div class="container">
        <div class="form-group">
            <label for="create-numero">Numero Complejos:</label>
            <input type="text" id="create-numero" placeholder="Enter Numero Complejos">
        </div>
        <div class="form-group">
            <label for="create-tiposede">Tipo Sede:</label>
            <input type="text" id="create-tiposede" placeholder="Enter Tipo Sede">
        </div>
        <div class="form-group">
            <label for="create-presupuesto">Presupuesto:</label>
            <input type="text" id="create-presupuesto" placeholder="Enter Presupuesto">
        </div>
        <button onclick="createSede()">Create</button>
    </div>

    <script>
        function createSede() {
            var numero = document.getElementById("create-numero").value;
            var tiposede = document.getElementById("create-tiposede").value;
            var presupuesto = document.getElementById("create-presupuesto").value;

            if (numero == "" || tiposede == "" || presupuesto == "") {
                alert('Campos con elementos vacios!!!!!');
                return;
            }

            $.ajax({
                url: '/sede/Create',
                type: "POST",
                data: {
                    id: 0,
                    NumeroComplejos: numero,
                    TipoSede: tiposede,
                    Presupuesto: presupuesto
                },
                success: function (response) {

                    alert(response);
                    document.getElementById("create-numero").value = "";
                    document.getElementById("create-tiposede").value = "";
                    document.getElementById("create-presupuesto").value = "";

                    window.location.href = "/sede";
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                }

            });
        }
    </script>

</body>
</html>